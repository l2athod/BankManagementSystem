@model OnlineBanking.Models.AccountModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br>
<br>



<h2>Create</h2>
@if (TempData["Errormessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error ! </strong> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close>">
            <span>&times;</span>
        </button>
    </div>
}

<div class="row mt-4">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group pb-3 fw-bold">
                @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label manadatory pb-2" })
                @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control", @maxlength = 11 ,@onkeydown = "return OnlyNumeric(this);" })
                @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
            </div>

            @*<div class="">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
*@
            <div class="form-group pb-3 fw-bold" >
                <label asp-for="AccountBalance" class="control-label pb-2"></label>
                <input asp-for="AccountBalance" class="form-control" required />
                <span asp-validation-for="AccountBalance" class="text-danger"></span>
            </div>
            
            <div class="form-group pb-3 fw-bold" >
                <label asp-for="AccountType" class="control-label"></label> &nbsp;&nbsp;&nbsp;
                <label>
                        <input type="checkbox" name="AccountType" value="saving"  />
                        saving
                    </label>

                    <label>
                    <input type="checkbox" name="AccountType" value="current" required />
                        current
                    </label>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>

            <div class="form-group pb-3 fw-bold " >
                <label asp-for="Branch" class="control-label pb-2"></label>
                <input asp-for="Branch" class="form-control" required />
                <span asp-validation-for="Branch" class="text-danger"></span>
            </div>

            <div class="form-group pb-3 fw-bold">
                <label asp-for="IFSCCode" class="control-label pb-2"></label>
                <input asp-for="IFSCCode" class="form-control" maxlength="11" required />
                <span asp-validation-for="IFSCCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>


        function OnlyNumeric(evt) {
            var charCode = (evt.which) ? evt.which : evt.keyCode
            if ((charCode < 48 || charCode > 57)) {
                if (charCode == 8 || charCode == 46 || charCode == 0) {
                    return true;
                }
                else {
                    return false;
                }
            }
        }

    </script>
}
