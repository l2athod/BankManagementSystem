@model OnlineBanking.Models.Login

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="text-center text-lg-start">
  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center" style="margin-top: 5rem;">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Login</h2>
            <form asp-controller="Account" asp-action="Login">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">

                <div class="form-outline mb-4">
                    <input type="text" asp-for="UserName" class="form-control" />
                    <label asp-for="UserName" class="form-label"> </label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" asp-for="Password" class="form-control" />
                    <label asp-for="Password" class="form-label"> </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Login </button>

                </div>
            </form>
          </div>
        </div>
      </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://img.freepik.com/free-vector/payment-online-icon-set-design_24640-45103.jpg?w=740&t=st=1679132287~exp=1679132887~hmac=dc595d32786d168fb34b89ba98b3169deec6fff673d0688007ee018ef3302b82" class="w-100 rounded-4 shadow-4" alt=""  style="height: 456px;"/>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
